<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alessio.luca.a321do">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NoteActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>
            <meta-data android:name="android.app.default_searchable"
                android:value=".NoteActivity"/>
        </activity>
        <activity android:name=".NotificationReceiverActivity"
            android:noHistory="true"
            android:excludeFromRecents="true"/>
        <activity android:name=".EditNoteActivity" android:configChanges="orientation|screenSize"/>
        <receiver android:name=".AlarmReceiver" />
        <activity android:name=".EditMediaActivity"/>
        <activity android:name=".EditDetailsActivity"/>
        <activity android:name=".EditCheckListActivity"/>
        <activity android:name=".EditDateTimeActivity"/>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
</manifest>
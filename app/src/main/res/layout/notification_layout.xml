<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="25dp">

        <TextView
            android:text="@string/errorEmptyField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textSize="40sp"
            android:gravity="center"
            android:id="@+id/textViewNotificationTitle" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/imageViewNotification"/>

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNotificationDescription" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center">
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notificationMessageTaggedAs" />
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNotificationTag" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center">
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notificationMessageImportance" />
            <TextView
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNotificationImportance" />
        </LinearLayout>

        <TextView
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/notificationMessageHYDI" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp"
            android:gravity="center_horizontal">
            <Button
                style="@style/genericButton"
                android:text="@string/notificationOptionDismiss"
                android:textColor="@color/red"
                android:id="@+id/buttonNotificationDismiss"/>
            <Button
                style="@style/genericButton"
                android:text="@string/notificationOptionSnooze"
                android:id="@+id/buttonNotificationSnooze"
                android:textColor="@color/blue"/>
            <Button
                style="@style/genericButton"
                android:text="@string/notificationOptionTick"
                android:id="@+id/buttonNotificationTick"
                android:textColor="@color/green"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>